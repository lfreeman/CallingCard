<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalingCard" >

    <TextView
        android:id="@+id/textViewAccessNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/access_number" 
        />

    <EditText
        android:id="@+id/editTextAccessNumber"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewAccessNumber"
        android:layout_below="@+id/textViewAccessNumber" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewIntPrefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/int_prefix" 
        android:layout_alignLeft="@+id/textViewAccessNumber"
        android:layout_below="@+id/editTextAccessNumber" 
        />

    <EditText
        android:id="@+id/editTextIntPrefix"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewIntPrefix"
        android:layout_below="@+id/textViewIntPrefix" >
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/btnSaveLbl" 
        android:onClick="handleSaveClick"/>

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/save"
        android:layout_alignRight="@+id/editTextIntPrefix"
        android:text="@string/btnClearLbl"
        android:onClick="handleClearClick" />
</RelativeLayout>